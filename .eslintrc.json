{
  "root": true,
  "extends": [
    "airbnb",
    "plugin:vue/recommended",
    "@nuxtjs/eslint-config-typescript"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "import/extensions": "off",
    "no-undef": 0,
    "semi": [2, "always"],
    "max-len": 0,
    "space-before-function-paren": 0,
    "object-property-newline": 0,
    "vue/order-in-components": 0,
    "vue/max-attributes-per-line": [2, {
      "singleline": 2,
      "multiline": 2
    }]
  }
}